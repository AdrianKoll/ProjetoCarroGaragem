<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Meu_app_car">

        <!-- Activity inicial (Tela de boas-vindas) -->
        <activity
            android:name=".ui.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.Login"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Telas de autenticação -->
        <activity
            android:name=".ui.SignInActivity"
            android:exported="false"
            android:theme="@style/Theme.Login" />

        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Login" />

        <activity
            android:name=".ui.CheckEmailActivity"
            android:exported="false"
            android:theme="@style/Theme.Login" />

        <!-- Tela principal -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false" />

        <!-- Tela de menu -->
        <activity
            android:name=".ui.MenuActivity"
            android:exported="false" />

        <!-- Cadastro de veículos -->
        <activity
            android:name=".ui.AddEntryActivity"
            android:exported="false" />

        <!-- Lista de veículos -->
        <activity
            android:name=".ui.VehicleListActivity"
            android:exported="false" />

        <!-- Detalhes de um registro -->
        <activity
            android:name=".ui.DetalhesEntryActivity"
            android:exported="false" />

        <!-- Verificação de veículo -->
        <activity
            android:name=".ui.CheckVehicleActivity"
            android:exported="false" />

    </application>
</manifest>