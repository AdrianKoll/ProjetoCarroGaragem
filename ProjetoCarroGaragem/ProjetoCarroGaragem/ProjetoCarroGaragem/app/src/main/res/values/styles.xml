<resources>

    <!-- Tema principal do aplicativo -->
    <style name="Theme.MeuAppCar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Cores principais -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorSecondaryVariant">@color/accentColor</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Fundo da janela -->
        <item name="android:windowBackground">@color/backgroundColor</item>

        <!-- Cor da barra de status -->
        <item name="android:statusBarColor">@color/primaryDark</item>

        <!-- Fonte padrão do sistema -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Estilo padrão para botões -->
    <style name="Widget.MeuAppCar.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Estilo padrão para campos de texto -->
    <style name="Widget.MeuAppCar.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="android:textColorHint">@color/textSecondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>