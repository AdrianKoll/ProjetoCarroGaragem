<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".ui.VehicleListActivity"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gerenciar Registros"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:fitsSystemWindows="true">

        <!-- Card Principal -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar, visualizar, editar e excluir registros de veículos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:layout_gravity="center" />

                <!-- Campo de busca -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:fitsSystemWindows="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buscar"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Caixa de busca reduzida -->
                    <EditText
                        android:id="@+id/editTextSearch"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded_edittext_dark"
                        android:hint="Buscar por placa, nome, motivo, modelo..."
                        android:textColorHint="@color/textSecondary"
                        android:textColor="@color/white"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:inputType="text" />

                </LinearLayout>

                <!-- Filtros de busca -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupFilters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Todos"
                            android:checkable="true"
                            android:checked="true"
                            app:chipBackgroundColor="@color/chip_selector"
                            android:textColor="@color/white" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPlaca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Placa"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/chip_selector"
                            android:textColor="@color/white" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipNome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nome"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/chip_selector"
                            android:textColor="@color/white" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipMotivo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Motivo"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/chip_selector"
                            android:textColor="@color/white" />

                        <!-- NOVO FILTRO: DATA/HORA -->
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipDataHora"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data/Hora ↑"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/chip_selector"
                            android:textColor="@color/white"
                            android:tooltipText="Filtrar por data e hora em ordem crescente" />

                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Lista de veículos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewVehicles"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp" />

        <!-- Texto quando não há resultados -->
        <TextView
            android:id="@+id/textViewNoResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nenhum veículo encontrado"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
