<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".ui.AddEntryActivity"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Registrar Veículo"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:fitsSystemWindows="true">

            <!-- Card Principal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@android:color/white">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registrar Novo Veículo"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="24dp"
                        android:gravity="center"
                        android:layout_gravity="center" />

                    <!-- Campo Motivo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp"
                        android:fitsSystemWindows="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Motivo"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextText"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext_dark"
                            android:hint="Digite o motivo"
                            android:textColorHint="@color/textSecondary"
                            android:textColor="@color/white"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:inputType="textCapSentences" />

                    </LinearLayout>

                    <!-- Campo Nome Completo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp"
                        android:fitsSystemWindows="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nome Completo"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextNome"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext_dark"
                            android:hint="Digite o nome completo"
                            android:textColorHint="@color/textSecondary"
                            android:textColor="@color/white"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:inputType="textPersonName" />

                    </LinearLayout>

                    <!-- Campo Placa do Carro -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp"
                        android:fitsSystemWindows="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Placa do Carro"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextPlaca"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext_dark"
                            android:hint="Digite a placa do carro"
                            android:textColorHint="@color/textSecondary"
                            android:textColor="@color/white"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:inputType="textCapCharacters"
                            android:maxLength="8" />

                    </LinearLayout>

                    <!-- Campo Modelo / Cor -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp"
                        android:fitsSystemWindows="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modelo / Cor"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextModeloCor"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext_dark"
                            android:hint="Digite o modelo e cor"
                            android:textColorHint="@color/textSecondary"
                            android:textColor="@color/white"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:inputType="textCapWords" />

                    </LinearLayout>

                    <!-- Campo Data -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp"
                        android:fitsSystemWindows="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextData"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext_dark"
                            android:hint="DD/MM/AAAA"
                            android:textColorHint="@color/textSecondary"
                            android:textColor="@color/white"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:inputType="date" />

                    </LinearLayout>

                    <!-- Campo Horário Entrada -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp"
                        android:fitsSystemWindows="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Horário Entrada"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextHoraEntrada"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext_dark"
                            android:hint="HH:MM"
                            android:textColorHint="@color/textSecondary"
                            android:textColor="@color/white"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:inputType="time" />

                    </LinearLayout>

                    <!-- Campo Horário Saída (opcional) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp"
                        android:fitsSystemWindows="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Horário Saída (opcional)"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextHoraSaida"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext_dark"
                            android:hint="HH:MM"
                            android:textColorHint="@color/textSecondary"
                            android:textColor="@color/white"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:inputType="time" />

                    </LinearLayout>

                    <!-- Campo Observação -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp"
                        android:fitsSystemWindows="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Observação"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextObservacao"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/rounded_edittext_dark"
                            android:hint="Adicione observações aqui"
                            android:textColorHint="@color/textSecondary"
                            android:textColor="@color/white"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:gravity="top"
                            android:inputType="textMultiLine" />

                    </LinearLayout>

                    <!-- Botão Salvar -->
                    <Button
                        android:id="@+id/btnSalvar"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Salvar"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_button_red"
                        android:layout_marginBottom="16dp" />

                    <!-- Botão Voltar -->
                    <Button
                        android:id="@+id/btnVoltar"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Voltar"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:background="@drawable/rounded_button_red" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

