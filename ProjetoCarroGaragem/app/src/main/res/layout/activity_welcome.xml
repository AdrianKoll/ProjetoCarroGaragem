<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    android:padding="32dp">

    <!-- Logo -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/hexagon_logo"
        android:layout_marginBottom="32dp"
        android:contentDescription="@null"/>

    <!-- Título Welcome -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Descrição -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_description"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="32dp" />

    <!-- Nome da empresa -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_name"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Slogan -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_slogan"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginBottom="48dp" />

    <!-- Botão Sign in -->
    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="32dp"
        android:text="@string/sign_in"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_red"/>

    <!-- Botão Sign up -->
    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:paddingHorizontal="32dp"
        android:text="@string/sign_up"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_red"/>

    <!-- Sign in with Social Media -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_social"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Ícones de redes sociais -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonFacebook"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_dialog_email"
            android:background="@android:color/transparent"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/desc_facebook"/>

        <ImageButton
            android:id="@+id/buttonTwitter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_dialog_email"
            android:background="@android:color/transparent"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/desc_twitter"/>

        <ImageButton
            android:id="@+id/buttonLinkedIn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_dialog_email"
            android:background="@android:color/transparent"
            android:contentDescription="@string/desc_linkedin"/>

    </LinearLayout>

</LinearLayout>